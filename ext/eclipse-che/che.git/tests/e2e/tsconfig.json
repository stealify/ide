{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,

    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "types": ["reflect-metadata", "@types/mocha", "@types/node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": false,
    "sourceMap": true
  }
}
